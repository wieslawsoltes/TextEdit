<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:TextEdit.Controls;assembly=TextEdit.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TextEdit.Sandbox.MainWindow"
        Title="TextEdit Sandbox">
    <StackPanel Margin="16" Spacing="12">
        <TextBlock FontSize="20"
                   Text="TextEdit Sandbox" />
        <Border Padding="12"
                Background="{DynamicResource ThemeAccentBrush1}"
                CornerRadius="8">
            <TextBlock Name="VersionTextBlock"
                       Text="Initializing..."
                       FontSize="16"
                       Foreground="{DynamicResource ThemeForegroundBrush}" />
        </Border>
        <Border Padding="12"
                Background="{DynamicResource ThemeAccentBrush1}"
                CornerRadius="8">
            <StackPanel Spacing="4">
                <TextBlock Name="DocumentInfoTextBlock"
                           Text="Document info pending..."
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource ThemeForegroundBrush}" />
                <TextBlock Name="BufferTextBlock"
                           Text="Buffer snapshot pending..."
                           TextWrapping="Wrap"
                           Foreground="{DynamicResource ThemeForegroundBrush}" />
            </StackPanel>
        </Border>
        <Border Padding="12"
                Background="{DynamicResource ThemeAccentBrush1}"
                CornerRadius="8">
            <StackPanel Spacing="8">
                <TextBlock Text="Input pipeline preview"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource ThemeForegroundBrush}" />
                <controls:CodeEditorControl Name="EditorControl"
                                            Height="220"
                                            Background="{DynamicResource ThemeForegroundBrush}" />
                <TextBlock Name="GestureStatusTextBlock"
                           Text="Awaiting gestures..."
                           TextWrapping="Wrap"
                           Foreground="{DynamicResource ThemeForegroundBrush}" />
            </StackPanel>
        </Border>
        <TextBlock TextWrapping="Wrap"
                   Text="This sandbox wires the core, rendering, and extensions assemblies for validation during early milestones." />
    </StackPanel>
</Window>
